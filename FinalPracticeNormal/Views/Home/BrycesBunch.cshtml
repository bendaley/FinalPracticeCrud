@{
    ViewData["Title"] = "Bryce's Bunch who want to be His";
}

@model List<GetBryce>

<table class=" = table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Age</td>
            <td>Phone</td>
            <td>Major</td>
            <td>Tommy John's?</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach(var x in Model)
            {
                <tr>
                    <td>@x.FirstName</td>
                    <td>@x.LastName</td>
                    <td>@x.Age</td>
                    <td>@x.Phone</td>
                    <td>@x.Major.MajorName</td>
                    <td>@x.TommyJohn</td>

                    <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.ApplicationId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.ApplicationId">Delete</a></td>
                </tr>
            }
    </tbody>
</table>
